{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "typeRoots": ["./src/@types","node_modules/@types"]
  },
  "include": ["src/**/*"],
  "resolveJsonModule": true,
  "esModuleInterop": true
}
